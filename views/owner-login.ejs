<%- include('./partials/header') %>
<!-- Display flash messages -->
<% if (messages) { %> <% if (messages.success) { %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 shadow-lg z-50">
  <%= messages.success %>
</div>
<% } %> <% if (messages.error) { %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 shadow-lg z-50">
  <%= messages.error %>
</div>
<% } %> <% } %>
<div class="w-full h-screen flex items-center justify-center px-6 md:px-20 bg-gradient-to-br from-gray-100 to-gray-300">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8 relative">
    <h4 class="text-3xl font-bold text-center text-gray-800 mb-6">
      Owner Login
    </h4>
    <form action="/owner-login" method="post" class="space-y-4">
      <input class="block w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300" type="email" placeholder="Email" name="email" required />
      <input class="block w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all duration-300" type="password" placeholder="Password" name="password" required />
      <input class="w-full py-3 rounded-full bg-blue-500 hover:bg-blue-600 text-white font-semibold cursor-pointer transition-all duration-300" type="submit" value="Login" />
    </form>
  </div>
</div>
<%- include('./partials/footer') %>